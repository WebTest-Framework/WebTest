{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"rootDir": "src",
    "skipLibCheck": true,
    "esModuleInterop": true,
		"strict": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	],
  "include": [
    "src/**/*.ts",
    "src/*.ts"
  ]
}